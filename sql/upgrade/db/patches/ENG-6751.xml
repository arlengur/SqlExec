<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="ENG-6751-01" author="mdaly">
        <comment>Track the transcript associated with the downloaded variant</comment>
        <sql>
            ALTER TABLE `prodlims`.`HorizonCloudResult`
                ADD COLUMN `transcript` VARCHAR(100) AFTER `hgvsVariantName`;
        </sql>

        <rollback>
            ALTER TABLE `prodlims`.`HorizonCloudResult`
                DROP COLUMN `transcript`;
        </rollback>
    </changeSet>
</databaseChangeLog>