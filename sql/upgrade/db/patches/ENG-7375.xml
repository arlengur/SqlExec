        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="ENG-7375-01" author="jdavid">
        <comment>Add archive column for sequencing run table</comment>
        <sql>
            ALTER TABLE `hts`.`sequencingrun` ADD COLUMN `archive` bit(1) NOT NULL DEFAULT b'0';
        </sql>

        <rollback>
            ALTER TABLE `hts`.`sequencingrun` DROP COLUMN `archive`;
        </rollback>
    </changeSet>
</databaseChangeLog>