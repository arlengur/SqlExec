<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="ENG-6560-01" author="mdaly">
        <comment>Add column to track which TSEResult is the active result</comment>
        <sql>
            ALTER TABLE `prodlims`.`HorizonCloudResult`
                ADD COLUMN `activeResult` BIT(1) DEFAULT FALSE AFTER `wbc_hexActivity`;
        </sql>

        <rollback>
            ALTER TABLE `prodlims`.`HorizonCloudResult`
                DROP COLUMN `activeResult`;
        </rollback>
    </changeSet>
</databaseChangeLog>